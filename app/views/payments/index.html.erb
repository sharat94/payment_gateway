<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>Bank ifsc code</th>
      <th>Bank account number</th>
      <th>Amount</th>
      <th>Merchant transaction ref</th>
      <th>Transaction date</th>
      <th>Payment gateway merchant reference</th>
      <th>Payload with sha</th>
      <th>Payload to pg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.bank_ifsc_code %></td>
        <td><%= payment.bank_account_number %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.merchant_transaction_ref %></td>
        <td><%= payment.transaction_date %></td>
        <td><%= payment.payment_gateway_merchant_reference %></td>
        <td><%= payment.payload_with_sha %></td>
        <td><%= payment.payload_to_pg %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

